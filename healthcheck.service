[Unit]
Description=Healthcheck for thecleancoder.dev
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=wingkeet
Group=wingkeet
WorkingDirectory=/home/wingkeet/python_work/healthcheck
ExecStart=/home/wingkeet/python_work/healthcheck/healthcheck.sh
Restart=on-failure
RestartSec=3s

[Install]
WantedBy=multi-user.target
